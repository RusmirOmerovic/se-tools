#!/bin/bash
# deleterepo.sh ‚Äì Lokal + GitHub-Repo l√∂schen

set -e
GREEN='\033[0;32m'
RED='\033[0;31m'
NC='\033[0m'

if [ -z "$1" ]; then
    echo -e "${RED}‚ùó Bitte Repository-Namen angeben (z. B. deleterepo test1)${NC}"
    exit 1
fi
repoName=$1

# Lokale L√∂schung
read -r -p "üìÅ Lokales Repo '$repoName' l√∂schen? (j/n): " deleteLocal
if [[ "$deleteLocal" =~ ^[Jj]$ ]]; then
    repoPath=$(find "$HOME" -type d -name "$repoName" 2>/dev/null | head -n 1)
    if [ -n "$repoPath" ]; then
        rm -rf "$repoPath"
        echo -e "${GREEN}‚úÖ Lokal gel√∂scht: $repoPath${NC}"
    else
        echo -e "${RED}‚ùå Lokales Verzeichnis nicht gefunden.${NC}"
    fi
fi

# Remote-L√∂schung
read -r -p "üåê GitHub Repo '$repoName' l√∂schen? (j/n): " deleteRemote
if [[ "$deleteRemote" =~ ^[Jj]$ ]]; then
    if command -v gh &>/dev/null; then
        gh repo delete "$repoName" --yes
        echo -e "${GREEN}‚úÖ GitHub-Repo gel√∂scht: $repoName${NC}"
    else
        echo -e "${RED}‚ùå GitHub CLI (gh) nicht installiert.${NC}"
    fi
fi
