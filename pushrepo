#!/bin/bash

# === Farben ===
GREEN='\033[0;32m'
CYAN='\033[0;36m'
RED='\033[0;31m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# === Projektname & Branch ===
PROJECT_NAME=$(basename "$(pwd)")
BRANCH=$(git rev-parse --abbrev-ref HEAD)

echo -e "${CYAN}ğŸ“ Projekt: $PROJECT_NAME  |  ğŸŒ¿ Branch: $BRANCH${NC}"

# === Sicherheits-Check ===
SENSITIVE_PATTERNS=(".*\.env" ".*\.env\.local" ".*\.DS_Store" ".*\.key" "secrets/" ".*\.supabase/" ".*\.pem")

echo -e "${CYAN}ğŸ” Sicherheits-Check auf sensible Dateien...${NC}"

ALL_FILES=$(git status --short | awk '{print $2}')
for pattern in "${SENSITIVE_PATTERNS[@]}"; do
  if echo "$ALL_FILES" | grep -qE "$pattern"; then
    echo -e "${RED}ğŸš« Sicherheitswarnung: Sensible Datei erkannt: $pattern${NC}"
    echo "Bitte entferne sie mit: git rm --cached <dateiname>"
    exit 1
  fi
done

echo -e "${GREEN}âœ… Sicherheits-Check bestanden.${NC}"

# === Lock-Dateien entfernen ===
LOCKS=(".git/index.lock" ".git/ORIG_HEAD.lock" ".git/refs/remotes/origin/$BRANCH.lock")
for lock in "${LOCKS[@]}"; do
  if [ -f "$lock" ]; then
    echo -e "${YELLOW}âš ï¸  Lock-Datei gefunden: $lock â€“ wird entfernt...${NC}"
    rm -f "$lock"
  fi
done

# === Ã„nderungen automatisch hinzufÃ¼gen ===
echo -e "${CYAN}ğŸ“¦ Git Add lÃ¤uft...${NC}"
git add .

# === Nichts zum Committen? ===
if git diff --cached --quiet; then
  echo -e "${YELLOW}â„¹ï¸  Keine Ã„nderungen zum Committen â€“ Vorgang abgebrochen.${NC}"
  exit 0
fi

# === Commit-Nachricht ===
read -r -p "ğŸ“ Commit-Nachricht (ENTER = automatisch): " message
if [ -z "$message" ]; then
  message="ğŸ“¦ Update: $(date '+%Y-%m-%d %H:%M') â€“ Automatischer Push"
fi

# === Commit ===
git commit -m "$message" 1>/dev/null
if [ $? -eq 0 ]; then
  echo -e "${GREEN}âœ… Commit erfolgreich.${NC}"
else
  echo -e "${RED}âŒ Fehler beim Commit.${NC}"
  exit 1
fi

# === Git Pull ===
echo -e "${CYAN}ğŸ”„ Aktualisiere lokalen Stand (git pull)...${NC}"
git pull --rebase origin "$BRANCH"
if [ $? -ne 0 ]; then
  echo -e "${RED}âŒ Git Pull fehlgeschlagen â€“ Konflikte manuell lÃ¶sen.${NC}"
  exit 1
fi

# === Push ===
echo -e "${CYAN}ğŸ“¤ Push nach GitHub...${NC}"
git push origin "$BRANCH"
if [ $? -eq 0 ]; then
  echo -e "${GREEN}âœ… Push abgeschlossen!${NC}"
else
  echo -e "${RED}âŒ Push fehlgeschlagen. PrÃ¼fe git-Status & Rechte.${NC}"
fi
# === Ende des Skripts ===